doctype html
head
  title Login
  meta(charset='utf-8' name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js')
.p-5.shadow-lg.container(align='center')
  main
    .loginBox
      form#signUp.form-control.p-2.w-75(action='/signIn' method='POST')
        fieldset
          .page-header.font-weight-bold
            legend
              | Bem-vindo
              abbr(title='Mandatory fields')
          .form-group.text-left.font-weight-bold
            label(for='username')
              | ID
              abbr(title='Value between 1 and 500')
            input#username.form-control(type='text' minlength='1' maxlength='500' required='' name='id')
          .form-group.text-left.font-weight-bold
            label(for='password')
              | Password
              abbr(title='More than 4 characters: at least one uppercase character and one digit ')
            input#password.form-control(type='password' minlength='4' required='' name='password' title='Must contain at least one number and one letter, and at least 8 or more characters')
          .btn-group.d-flex.justify-content-center
            button.p-2.btn.btn-success.w-25(type='submit') Login
